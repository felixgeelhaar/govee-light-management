{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"customConditions": [
			"node"
		],
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"noImplicitOverride": true,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["node"],
		"paths": {
			"@/*": ["./src/*"],
			"@shared/*": ["./src/shared/*"]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}