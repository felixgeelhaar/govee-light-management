{
	"$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
	"Name": "Govee Light Management",
	"Version": "1.0.0.0",
	"Author": "Felix Geelhaar",
	"Actions": [
		{
			"Name": "Toggle On/Off",
			"UUID": "com.felixgeelhaar.govee-light-management.toggle",
			"Icon": "imgs/actions/toggle/icon",
			"Tooltip": "Toggle individual lights on/off with Stream Deck+ support",
			"PropertyInspectorPath": "ui/toggle-action.html",
			"Controllers": [
				"Keypad",
				"Encoder"
			],
			"Encoder": {
				"layout": "$X1",
				"TriggerDescription": {
					"Push": "Toggle Light",
					"Touch": "Toggle Light"
				}
			},
			"States": [
				{
					"Image": "imgs/actions/toggle/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Brightness Control",
			"UUID": "com.felixgeelhaar.govee-light-management.brightness",
			"Icon": "imgs/actions/brightness/icon",
			"Tooltip": "Control brightness with dial rotation and touchscreen on Stream Deck+",
			"PropertyInspectorPath": "ui/brightness-action.html",
			"Controllers": [
				"Keypad",
				"Encoder"
			],
			"Encoder": {
				"layout": "$A0",
				"TriggerDescription": {
					"Push": "Set Brightness",
					"Touch": "Set Brightness",
					"Rotate": "Adjust Brightness"
				}
			},
			"States": [
				{
					"Image": "imgs/actions/brightness/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Color Control",
			"UUID": "com.felixgeelhaar.govee-light-management.color",
			"Icon": "imgs/actions/color/icon",
			"Tooltip": "Control color with presets or hue adjustment on Stream Deck+",
			"PropertyInspectorPath": "ui/color-action.html",
			"Controllers": [
				"Keypad",
				"Encoder"
			],
			"Encoder": {
				"layout": "$B1",
				"TriggerDescription": {
					"Push": "Set Color",
					"Touch": "Set Color",
					"Rotate": "Cycle Colors"
				}
			},
			"States": [
				{
					"Image": "imgs/actions/color/key",
					"TitleAlignment": "middle"
				}
			]
		},
		{
			"Name": "Color Temperature",
			"UUID": "com.felixgeelhaar.govee-light-management.warmth",
			"Icon": "imgs/actions/warmth/icon",
			"Tooltip": "Control color temperature (warmth) with dial rotation on Stream Deck+",
			"PropertyInspectorPath": "ui/warmth-action.html",
			"Controllers": [
				"Keypad",
				"Encoder"
			],
			"Encoder": {
				"layout": "$A0",
				"TriggerDescription": {
					"Push": "Set Temperature",
					"Touch": "Set Temperature",
					"Rotate": "Adjust Warmth"
				}
			},
			"States": [
				{
					"Image": "imgs/actions/warmth/key",
					"TitleAlignment": "middle"
				}
			]
		}
	],
	"Category": "Smart Home",
	"CategoryIcon": "imgs/plugin/category-icon",
	"CodePath": "bin/plugin.js",
	"Nodejs": {
		"Version": "20",
		"Debug": "enabled"
	},
	"Description": "Professional Govee smart light control with Stream Deck Plus dial support",
	"Keywords": ["govee", "smart lights", "home automation", "rgb", "lighting", "smart home", "elgato"],
	"Icon": "imgs/plugin/marketplace",
	"SDKVersion": 2,
	"SupportedInLanguages": ["en", "de"],
	"Software": {
		"MinimumVersion": "6.6"
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "12"
		},
		{
			"Platform": "windows",
			"MinimumVersion": "10"
		}
	],
	"PropertyInspectorPath": "ui/global-settings.html",
	"UUID": "com.felixgeelhaar.govee-light-management"
}
