{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Vue-specific */
    "types": ["node", "jsdom"],

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/frontend/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/frontend/**/*.ts", 
    "src/frontend/**/*.vue",
    "src/shared/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}