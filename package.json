{
    "name": "govee-light-management",
    "version": "1.0.0",
    "description": "Enterprise-grade Stream Deck plugin for managing Govee lights with advanced group functionality",
    "main": "com.felixgeelhaar.govee-light-management.sdPlugin/bin/plugin.js",
    "scripts": {
        "build": "npm run build:backend && npm run build:frontend",
        "build:backend": "vite build --config vite.backend.config.ts",
        "build:frontend": "vite build",
        "dev": "npm run dev:backend & npm run dev:frontend",
        "dev:backend": "node scripts/watch-backend.js",
        "dev:frontend": "vite",
        "watch": "npm run dev:backend",
        "streamdeck:dev": "streamdeck dev",
        "streamdeck:link": "streamdeck link com.felixgeelhaar.govee-light-management.sdPlugin",
        "streamdeck:restart": "streamdeck restart com.felixgeelhaar.govee-light-management",
        "streamdeck:stop": "streamdeck stop com.felixgeelhaar.govee-light-management",
        "streamdeck:validate": "streamdeck validate com.felixgeelhaar.govee-light-management.sdPlugin",
        "streamdeck:pack": "streamdeck pack com.felixgeelhaar.govee-light-management.sdPlugin",
        "test": "vitest",
        "test:frontend": "vitest --config vite.config.ts",
        "test:coverage": "vitest --coverage",
        "test:ui": "vitest --ui",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "playwright test --debug",
        "test:server": "node test/server/test-server.js",
        "test:server:background": "node test/server/test-server.js &",
        "lint": "eslint src/**/*.ts src/**/*.vue",
        "lint:fix": "eslint src/**/*.ts src/**/*.vue --fix",
        "type-check": "tsc --noEmit && vue-tsc --noEmit",
        "type-check:backend": "tsc --noEmit",
        "type-check:frontend": "vue-tsc --noEmit",
        "format": "prettier --write \"src/**/*.{ts,js,json,vue}\"",
        "format:check": "prettier --check \"src/**/*.{ts,js,json,vue}\"",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "type": "module",
    "devDependencies": {
        "@elgato/cli": "^1.4.0",
        "@playwright/test": "^1.49.0",
        "@tsconfig/node20": "^20.1.2",
        "@types/node": "^24.6.2",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.0.0",
        "@vitejs/plugin-vue": "6.0.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "@vue/test-utils": "2.4.6",
        "chokidar": "4.0.3",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-vue": "^10.5.0",
        "husky": "^9.0.11",
        "jsdom": "^27.0.0",
        "lint-staged": "^16.2.3",
        "prettier": "^3.3.3",
        "tslib": "^2.6.2",
        "typescript": "^5.6.3",
        "vite": "7.1.9",
        "vite-tsconfig-paths": "5.1.4",
        "vitest": "^3.2.4",
        "vue-eslint-parser": "10.2.0",
        "vue-tsc": "^3.1.0"
    },
    "dependencies": {
        "@elgato/streamdeck": "^1.0.0",
        "@felixgeelhaar/govee-api-client": "3.0.2",
        "@xstate/vue": "^5.0.0",
        "vue": "^3.5.22",
        "xstate": "^5.22.1",
        "zod": "^4.1.11"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/felixgeelhaar/govee-light-management.git"
    },
    "keywords": [
        "streamdeck",
        "govee",
        "smart-lights",
        "automation",
        "elgato"
    ],
    "author": "Felix Geelhaar",
    "license": "MIT",
    "lint-staged": {
        "src/**/*.{ts,js,vue}": [
            "eslint --fix",
            "prettier --write"
        ],
        "**/*.{json,md}": [
            "prettier --write"
        ]
    }
}
