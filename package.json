{
  "name": "govee-light-management",
  "version": "1.2.0",
  "description": "Enterprise-grade Stream Deck plugin for managing Govee lights with advanced group functionality",
  "main": "com.felixgeelhaar.govee-light-management.sdPlugin/bin/plugin.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "vite build --config vite.backend.config.ts",
    "build:frontend": "vite build",
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:backend": "node scripts/watch-backend.js",
    "dev:frontend": "vite",
    "watch": "npm run dev:backend",
    "streamdeck:dev": "streamdeck dev",
    "streamdeck:link": "streamdeck link com.felixgeelhaar.govee-light-management.sdPlugin",
    "streamdeck:restart": "streamdeck restart com.felixgeelhaar.govee-light-management",
    "streamdeck:stop": "streamdeck stop com.felixgeelhaar.govee-light-management",
    "streamdeck:validate": "streamdeck validate com.felixgeelhaar.govee-light-management.sdPlugin",
    "streamdeck:pack": "streamdeck pack com.felixgeelhaar.govee-light-management.sdPlugin",
    "test": "vitest",
    "test:frontend": "vitest --config vite.config.ts",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:visual": "playwright test visual-regression.spec.ts",
    "test:e2e:visual:update": "playwright test visual-regression.spec.ts --update-snapshots",
    "test:server": "node test/server/test-server.js",
    "test:server:background": "node test/server/test-server.js &",
    "lint": "eslint src/**/*.ts src/**/*.vue",
    "lint:fix": "eslint src/**/*.ts src/**/*.vue --fix",
    "type-check": "tsc --noEmit && vue-tsc --noEmit",
    "type-check:backend": "tsc --noEmit",
    "type-check:frontend": "vue-tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,js,json,vue}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,vue}\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "type": "module",
  "devDependencies": {
    "@elgato/cli": "1.6.0",
    "@playwright/test": "1.57.0",
    "@tsconfig/node20": "20.1.8",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "8.50.0",
    "@typescript-eslint/parser": "8.50.0",
    "@vitejs/plugin-vue": "6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "2.4.6",
    "canvas": "3.2.0",
    "chokidar": "5.0.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-vue": "10.6.2",
    "husky": "9.1.7",
    "jsdom": "27.3.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "vite-tsconfig-paths": "6.0.3",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "10.2.0",
    "vue-tsc": "3.1.8",
    "storybook": "^10.1.10",
    "@storybook/vue3-vite": "^10.1.10",
    "@chromatic-com/storybook": "^4.1.3",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "eslint-plugin-storybook": "^10.1.10",
    "playwright": "^1.57.0",
    "@vitest/browser": "^3.2.4"
  },
  "dependencies": {
    "@elgato/streamdeck": "2.0.0",
    "@felixgeelhaar/govee-api-client": "3.0.2",
    "@xstate/vue": "5.0.0",
    "vue": "^3.5.26",
    "xstate": "5.25.0",
    "zod": "4.2.1"
  },
  "overrides": {
    "glob": "^10.5.0",
    "js-yaml": "^4.1.1",
    "tar": "^7.5.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixgeelhaar/govee-light-management.git"
  },
  "keywords": [
    "streamdeck",
    "govee",
    "smart-lights",
    "automation",
    "elgato"
  ],
  "author": "Felix Geelhaar",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.{ts,js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
